# SalePoint Solution - Environment Variables Configuration
# Copy this file to .env and update the values according to your AWS environment

# ==============================================
# AWS Configuration
# ==============================================
AWS_REGION=us-east-1
AWS_ACCOUNT_ID=123456789012

# ==============================================
# MySQL RDS Configuration
# ==============================================
# Update these values with your RDS instance details
DB_HOST=salepoint-db.cluster-xxxxx.us-east-1.rds.amazonaws.com
DB_PORT=3306
DB_NAME=salepoint_db
DB_USER=admin
DB_PASSWORD=your-secure-password-here
DB_CONNECTION_LIMIT=10
DB_TIMEOUT=60000

# ==============================================
# DynamoDB Configuration
# ==============================================
DYNAMODB_TABLE_PREFIX=SalePoint
DYNAMODB_SESSIONS_TABLE=SalePoint-Sessions
DYNAMODB_CACHE_TABLE=SalePoint-Cache
DYNAMODB_API_LOGS_TABLE=SalePoint-APILogs
DYNAMODB_USER_PREFERENCES_TABLE=SalePoint-UserPreferences
DYNAMODB_APP_METRICS_TABLE=SalePoint-AppMetrics
DYNAMODB_ERROR_LOGS_TABLE=SalePoint-ErrorLogs

# ==============================================
# S3 Bucket Configuration
# ==============================================
# Update these with your actual bucket names
S3_WEB_BUCKET=salepoint-solution-web-123456789012-us-east-1
S3_ASSETS_BUCKET=salepoint-solution-assets-123456789012-us-east-1
S3_BACKUPS_BUCKET=salepoint-solution-backups-123456789012-us-east-1
S3_REGION=us-east-1

# ==============================================
# API Gateway Configuration
# ==============================================
# Update these values after running setup-api-gateway.sh
API_GATEWAY_ID=abcdef1234
API_GATEWAY_STAGE=prod
API_BASE_URL=https://abcdef1234.execute-api.us-east-1.amazonaws.com/prod

# ==============================================
# Lambda Configuration
# ==============================================
LAMBDA_LAYER_ARN=arn:aws:lambda:us-east-1:123456789012:layer:mysql-layer:1
LAMBDA_TIMEOUT=30
LAMBDA_MEMORY_SIZE=256
LAMBDA_RUNTIME=nodejs18.x

# ==============================================
# Application Settings
# ==============================================
APP_NAME=SalePoint Solution
APP_VERSION=1.0.0
APP_ENVIRONMENT=production
DEBUG_MODE=false
LOG_LEVEL=info

# ==============================================
# Security Configuration
# ==============================================
JWT_SECRET=your-jwt-secret-key-here
SESSION_TIMEOUT=86400
CORS_ORIGIN=*
RATE_LIMIT_REQUESTS=1000
RATE_LIMIT_WINDOW=900

# ==============================================
# Email Configuration (Optional)
# ==============================================
# For sending invoices and notifications
SES_REGION=us-east-1
SES_FROM_EMAIL=noreply@yourdomain.com
SES_FROM_NAME=SalePoint System

# ==============================================
# Monitoring and Logging
# ==============================================
CLOUDWATCH_LOG_GROUP=/aws/lambda/salepoint
CLOUDWATCH_RETENTION_DAYS=14
ENABLE_X_RAY_TRACING=true
ENABLE_DETAILED_MONITORING=true

# ==============================================
# Backup Configuration
# ==============================================
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
ENABLE_POINT_IN_TIME_RECOVERY=true

# ==============================================
# Performance Configuration
# ==============================================
CACHE_TTL=300
API_TIMEOUT=30000
CONNECTION_POOL_SIZE=20
QUERY_TIMEOUT=10000

# ==============================================
# Feature Flags
# ==============================================
ENABLE_REAL_TIME_UPDATES=true
ENABLE_EXPORT_FEATURES=true
ENABLE_BULK_OPERATIONS=true
ENABLE_ADVANCED_ANALYTICS=true
ENABLE_NOTIFICATIONS=true

# ==============================================
# Development/Testing (Set to false for production)
# ==============================================
ENABLE_CORS=true
ENABLE_DEBUG_LOGGING=false
MOCK_EXTERNAL_SERVICES=false
SKIP_AUTH_IN_DEV=false

# ==============================================
# Cost Optimization
# ==============================================
# DynamoDB
DYNAMODB_BILLING_MODE=PAY_PER_REQUEST
DYNAMODB_READ_CAPACITY=5
DYNAMODB_WRITE_CAPACITY=5

# Lambda
LAMBDA_RESERVED_CONCURRENCY=10
LAMBDA_PROVISIONED_CONCURRENCY=0

# S3
S3_INTELLIGENT_TIERING=true
S3_LIFECYCLE_ENABLED=true

# ==============================================
# Compliance and Governance
# ==============================================
DATA_RETENTION_POLICY_DAYS=2555
ENABLE_AUDIT_LOGGING=true
ENABLE_DATA_ENCRYPTION=true
COMPLIANCE_MODE=standard

# ==============================================
# Integration Settings
# ==============================================
# External service integrations (if any)
EXTERNAL_API_TIMEOUT=10000
WEBHOOK_TIMEOUT=5000
THIRD_PARTY_RATE_LIMIT=100

# ==============================================
# UI Configuration
# ==============================================
DEFAULT_ITEMS_PER_PAGE=20
MAX_ITEMS_PER_PAGE=100
DEFAULT_CURRENCY=USD
DATE_FORMAT=YYYY-MM-DD
TIME_FORMAT=HH:mm:ss

# ==============================================
# Business Logic Configuration
# ==============================================
DEFAULT_TAX_RATE=0.08
DEFAULT_COMMISSION_RATE=0.05
MAX_DISCOUNT_PERCENTAGE=0.50
INVOICE_NUMBER_PREFIX=INV
CUSTOMER_ID_PREFIX=CUST
PRODUCT_ID_PREFIX=PROD

# ==============================================
# API Rate Limiting
# ==============================================
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS_PER_MINUTE=60
RATE_LIMIT_REQUESTS_PER_HOUR=1000
BURST_LIMIT=10

# ==============================================
# Health Check Configuration
# ==============================================
HEALTH_CHECK_INTERVAL=300
HEALTH_CHECK_TIMEOUT=30
HEALTH_CHECK_PATH=/health
HEALTH_CHECK_ENABLED=true
