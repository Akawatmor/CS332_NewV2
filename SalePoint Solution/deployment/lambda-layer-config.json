{
  "name": "mysql-layer",
  "description": "Lambda layer containing MySQL dependencies for SalePoint Solution",
  "compatibleRuntimes": ["nodejs18.x", "nodejs20.x"],
  "dependencies": {
    "mysql2": "^3.6.0",
    "aws-sdk": "^2.1490.0"
  },
  "buildInstructions": {
    "steps": [
      "Create a new directory: mkdir mysql-layer",
      "Navigate to directory: cd mysql-layer",
      "Create nodejs directory: mkdir nodejs",
      "Navigate to nodejs: cd nodejs",
      "Initialize package.json: npm init -y",
      "Install dependencies: npm install mysql2 aws-sdk",
      "Navigate back: cd ..",
      "Create zip: zip -r mysql-layer.zip nodejs/",
      "Upload to AWS Lambda Layers"
    ]
  },
  "layerArn": "arn:aws:lambda:REGION:ACCOUNT_ID:layer:mysql-layer:1",
  "usage": {
    "attachToFunctions": [
      "getProductInfo",
      "customerManagement", 
      "customerSalesRepTracking",
      "salesTracking",
      "salesRepresentatives",
      "dashboardAnalytics"
    ]
  }
}
